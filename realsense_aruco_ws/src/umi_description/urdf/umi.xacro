<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro"
  name="umi">

    <link name="world" />

    <xacro:include filename="$(find ur_description)/urdf/inc/ur5e_macro.xacro"/>
    <xacro:ur5e_robot prefix="" />

    <joint name="ur_base_world" type="fixed">
        <parent link="world" />
        <child link="base_link" />
        <origin rpy="0 0 0" xyz="0 0 0" />
    </joint>

    <link name="hand_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.2" />
        <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0.0" iyz="-0.0" ixz="-0.0" />
      </inertial>
      <visual>
        <origin xyz="0 0 -0" rpy="0 0 0 " />
        <geometry>
          <mesh filename="package://umi_description/meshes/gripper_gopro.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://umi_description/meshes/gripper_gopro.STL" />
        </geometry>
      </collision>
    </link>

    <joint name="gripper_ur" type="fixed">
        <parent link="tool0" />
        <child link="hand_link" />
        <origin rpy="0 0 0" xyz="0 0 0" />
    </joint>

    <link name="left_finger_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.1" />
        <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0.0" iyz="-0.0" ixz="-0.0" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0 " />
        <geometry>
          <mesh filename="package://umi_description/meshes/left_finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://umi_description/meshes/left_finger.STL" />
        </geometry>
      </collision>
    </link>

    <link name="right_finger_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.1" />
        <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0.0" iyz="-0.0" ixz="-0.0" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0 " />
        <geometry>
          <mesh filename="package://umi_description/meshes/right_finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://umi_description/meshes/right_finger.STL" />
        </geometry>
      </collision>
    </link>

    <joint name="left_finger_joint" type="prismatic">
        <parent link="hand_link" />
        <child link="left_finger_link" />
        <origin xyz="0 -0.01105 0.108" rpy="0 0 0" />
        <limit effort="100.0" lower="-0.04" upper="0" velocity="0.5"/>
        <axis xyz="1 0 0"/>
    </joint>

    <joint name="right_finger_joint" type="prismatic">
        <parent link="hand_link" />
        <child link="right_finger_link" />
        <mimic joint="left_finger_joint" multiplier="1" offset="0" />
        <origin xyz="0 -0.01105 0.108" rpy="0 0 0" />
        <limit effort="100.0" lower="-0.04" upper="0" velocity="0.5"/>
        <axis xyz="-1 0 0"/>
    </joint>

    <link name="tool_link" />
    <joint name="tool_link_2_umi_link" type="fixed">
        <parent link="hand_link" />
        <child link="tool_link" />
        <origin rpy="0 0 0" xyz="0 -0.01105 0.2" />
    </joint>

</robot>